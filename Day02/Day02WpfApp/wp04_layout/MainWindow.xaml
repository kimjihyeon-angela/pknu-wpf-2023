<Window x:Class="wp04_layout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wp04_layout"
        mc:Ignorable="d"
        Title="MainWindow" Height="320" Width="500">
    <!-- stackpanel과 grid의 차이점 = > grid는 자신(부모)의 크기를 자식에게 물려줌 -->
    <StackPanel>
        <Canvas Width="50" Height="50" Background="LightBlue">
            <Button Width="150" Content="안녕하세요 버튼입니다." Margin="5"/>
        </Canvas>
<!-- canvas와 grid의 차이점 => canvas는 부모의 영향을 받지 않아 사이즈 커짐 / grid 크기로 제한-->
        <Grid Width="50" Height="50" Background="LightBlue">
            <Button Width="150" Content="안녕하세요 버튼입니다." Margin="5"/>
        </Grid>
    </StackPanel>
</Window>
